<% include ../partials/top  %>
    <% include ../partials/nav  %>
        <div class="container">
            <header class="jumbotron text-center">
                <h1>CampNow</h1>
                <p>View our Hand-Picked Campgrounds from all around the World</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                </p>
            </header>
            <div class="container row text-center" style="display: flex; flex-wrap: wrap;">
                <% camp.forEach(function(campground){ %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img src="<%= campground.image %>" alt="campground">
                            <div class="caption">
                                <h4>
                                    <%= campground.name %>
                                </h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">MORE INFO.</a>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <p>TradeMark CampNow 2018</p>
        </div>
        <% include ../partials/bot %>