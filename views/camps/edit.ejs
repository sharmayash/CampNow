<% include ../partials/top %>
    <% include ../partials/nav  %>
        <div class="container">
            <div class="row">
                <h1 style="text-align: center">Edit <%= camp.name %></h1>
                <div style="width: 30%; margin: 40px auto">
                    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>" min="0.01" step="0.01" >
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="camp[desc]" value="<%= camp.desc %>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Submit !</button>
                        </div>
                    </form>
                    <a href="/campgrounds/<%= camp._id %>">GO BACK</a>
                </div>
            </div>
        </div>

        <% include ../partials/bot %>